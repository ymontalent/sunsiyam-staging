@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Map>
@using ContentModels = SunSiyam.Core.Models;
@{}

<div class="explore__section">
    <div class="explore__wrap block__padding">
        <div class="container">
            <div class="explore__head">
                <div class="row">
                    <div class="col-12 col-lg-6 col-xxl-6">
                        <h2 class="block__title">@Html.Raw(Model.Heading)</h2>
                    </div>
                    <div class="col-12 col-lg-6 col-xxl-5">
                        <div class="block__description font-18">
                            @Model.Description

                            @if (Model.Button != null && Model.Button.Count() > 0)
                            {
                                <div class="explore__button">
                                    <div class="explore__button-text">@Umbraco.GetDictionaryValue("Click to download")</div>
                                    <div class="explore__button-inner">
                                        @foreach (var btn in Model.Button)
                                        {
                                            <a href="@btn.ButtonLink.GetLinkUrl()" class="btn btn-outline-brown">@btn.ButtonLabel</a>
                                        }
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>

            <div class="explore__map">
                @Html.Raw(Model.MapEmbededCode)
            </div>
        </div>
    </div>
    <div class="divider divider-gray"></div>
</div>