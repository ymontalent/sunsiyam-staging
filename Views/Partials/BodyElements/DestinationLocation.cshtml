@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.DestinationLocation>
@using ContentModels = SunSiyam.Core.Models;
@{
}

<div class="locationTransport__section">
    <div class="locationTransport__wrap block__padding">
        <div class="container">
            <div class="locationTransport__head">
                <div class="row">
                    <div class="col-12 col-lg-7">
                        <h2 class="block__title">@Html.Raw(Model.Heading)</h2>
                    </div>
                    <div class="col-12 col-lg-5">
                        <div class="block__description font-18 mt-lg-2">
                            @Model.Description
                        </div>
                    </div>
                </div>
            </div>

            <div class="locationTransport__content">
                <div class="row flex-column-reverse flex-lg-row">
                    <div class="col-12 col-lg-7 align-content-lg-end">
                        @if (Model.LocationDetails != null && Model.LocationDetails.Count() > 0)
                        {
                            <div class="locationTransport__info font-18">
                                <ul>
                                    @foreach (var details in Model.LocationDetails)
                                    {
                                        <li>@details</li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>

                    <div class="col-12 col-lg-5 align-content-lg-end">
                        @if (Model.Image != null && !string.IsNullOrEmpty(Model.Image.Url()))
                        {
                            <div class="locationTransport__image">
                                <img src="@Model.Image.GetCroppedImageUrl("670x1005")" alt="@Model.Image.Name" class="img-fluid" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="divider divider-gray"></div>
</div>